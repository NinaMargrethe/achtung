doctype html(ng-app='app')
div(ng-controller="next-update-stats-controller")

block head
    meta(charset="utf-8")
    title= title

    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    link(rel="stylesheet", href="http://getdarkstrap.com/darkstrap-blue/darkstrap-blue.css")
    link(rel='stylesheet', href="/stylesheets/style.css")

    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.min.js')




block nav
    nav.navbar.navbar-inverse.navbar-fixed-top
        .container
            .navbar-header
                //img.left(src='/public/images/unicorn.png')
                a.navbar-brand(href='#') #{title}
            #navbar.collapse.navbar-collapse
                .nav.navbar-nav.right
                    form(action="/login", method="post" class="form-inline" role="form" ).style(style="padding-top:20px;")
                        .form-group
                            label(class="sr-only" for="username") Username
                            input.purpleborder(type="text", name="username" class="form-control" id="username" placeholder="username")
                        .form-group
                            label(class="sr-only" for="password") Password
                            input(type="password", name="password" class="form-control" id="password" placeholder="password")
                        .checkbox
                            label
                                input(type="checkbox")
                                | Remember me
                            button(type="submit" class="btn btn-default") Log in



